@model UsuarioDTOViewModel
@{
    ViewData["Title"] = "Create";
}

<h1>REGISTRO</h1>


<span>@ViewBag.Error</span>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="usuario.Email" class="control-label"></label>
                <input asp-for="usuario.Email" class="form-control" />
                <span asp-validation-for="usuario.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="usuario.Password" class="control-label"></label>
                <input  type="password"asp-for="usuario.Password" class="form-control" />
                <span asp-validation-for="usuario.Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Login">Volver</a>
</div>

